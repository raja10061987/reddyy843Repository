<aura:component implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" 
access="global" controller="CalculatorControler"
>
 <aura:attribute name="fNumber" type="decimal"></aura:attribute>
    <aura:attribute name="sNumber" type="decimal"></aura:attribute>
    <aura:attribute name="result" type="decimal"></aura:attribute>
<article class="slds-card">
<div class="slds-card__header slds-grid">
<header class="slds-media slds-media_center slds-has-flexi-truncate">
<div class="slds-media__figure">
<span class="slds-icon_container slds-icon-standard-account" title="account">
<lightning:icon iconName="standard:account" alternativeText="Event" title="Event" />
<span class="slds-assistive-text">account</span>
</span>
</div>
    
<div class="slds-media__body">
<h2 class="slds-card__header-title">
<a href="#" class="slds-card__header-link slds-truncate" title="Accounts">
<span>Calculator</span>
</a>
</h2>
</div>
    
<div class="slds-no-flex">
<button class="slds-button slds-button_neutral" onclick="{!c.add}">SUM</button>
</div>
    
</header>
</div>
 <h1> welcome to salesforce tech book</h1>   
<div class="slds-card__body slds-card__body_inner">
    <div class="row">
        <h2 class="header">Basic Input Number</h2>
        <lightning:input aura:id="fNumber" value="{!v.fNumber}" type="number" name="input1" label="First Number" placeholder="Please enter First Number" />
        <lightning:input aura:id="sNumber" value="{!v.sNumber}" type="number"
                         name="input2" label="Second Number"  placeholder="Please enter second Number"/>
        <lightning:input aura:id="result" value="{!v.result}" type="number"
                         name="input3" label="Result: " />
    </div>

</div>
    
<footer class="slds-card__footer">
<a class="slds-card__footer-action" href="#">View All
<span class="slds-assistive-text">Accounts</span>
</a>
</footer>
    
</article>
</aura:component>