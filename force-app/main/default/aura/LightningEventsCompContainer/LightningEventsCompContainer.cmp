<aura:component access="global">
    
  <!--attributes for lightning data table-->
    <aura:attribute name="incomes" type="list"></aura:attribute>
    <aura:attribute name="myColumns" type="list"></aura:attribute>
    
    <!-- register the event-->
    <aura:registerEvent name="totalIncomeComponentEvent" type="c:myLightningComonentEvent"></aura:registerEvent>
     <!-- defing handler for lightning event-->
    <aura:handler name="totalIncomeComponentEvent" type="c:myLightningComonentEvent" action="{!c.handleRegisteredComponentEvent}" ></aura:handler>
    <!-- Defining init handler for lightning component -->
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"></aura:handler>
    
    <Lightning:card title="SFDC stop income calculator">
      <aura:set attribute="actions">
          <lightning:button label="show/hide income form" onclick="{!c.toggleIncomeForm}" variant="brand"></lightning:button>
        </aura:set>
        
        <p class="slds-p-horizontal_small">
        <div aura:id="incomeForm" class="hide">
            <lightning:input aura:id="source" name="source1" required="true" label="income source"></lightning:input>
            <lightning:input aura:id="amount" name="amount1" required="true" label="amount"></lightning:input>
            <br></br>
            <lightning:button name="addIncome" label="Add Income" onclick="{!c.addIncome}" variant="brand"></lightning:button>
        </div>
          
            <lightning:dataTable data="{!v.incomes}" columns="{!v.myColumns}" keyField="Sno"></lightning:dataTable>
            <br/>
            <lightning:button name="addIncome" label="calculate total Income" onclick="{!c.firetotalIncomeComponentEvent}" variant="brand"></lightning:button>
            
            
        </p>
    </Lightning:card>
    
    
    
</aura:component>