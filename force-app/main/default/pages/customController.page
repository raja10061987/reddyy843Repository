<apex:page controller="AccountSaveController">
  <apex:form >
  <apex:pageBlock title="Account Info">
  
  <apex:pageBlockSection title="Account details" columns="2" collapsible="true">
  <apex:inputfield value="{!actObj.Name}"/>
  <apex:inputField value="{!actObj.Rating}"/>
  <apex:inputField value="{!actObj.Phone}"/>
  </apex:pageBlockSection>
  
  <apex:pageBlockSection title="Additional info">
  <apex:inputField value="{!actObj.CustomerPriority__c}"/>
  <apex:inputField value="{!actObj.SLAExpirationDate__c}"/>
  </apex:pageBlockSection>
  
  <apex:pageBlockButtons location="both">
  <apex:commandButton value="Save" action="{!saveAccount}"/>
  </apex:pageBlockButtons>
  </apex:pageBlock>
  
  
  </apex:form>
</apex:page>